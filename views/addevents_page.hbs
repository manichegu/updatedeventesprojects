            {{/each}}
            `;
        }
        else if(main_category_value=="education"){
            document.getElementById("sub_category").innerHTML=`
            <option class="drop_down fs-5" style="background-color:#141e30;" selected>Choose Sub Category</option>
            {{#each education.related_subcategories_array}}
            <option  class="drop_down fs-5" style="background-color:#141e30;" value="{{this.sub_category_name}}">{{this.sub_category_name}}</option>

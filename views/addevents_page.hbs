        const main_category_value=document.getElementById("main_category").value;
        if(main_category_value=="services"){
            document.getElementById("sub_category").innerHTML=`
            <option class="drop_down fs-5" style="background-color:#141e30;" selected>Choose Sub Category</option>
            {{#each services.related_subcategories_array}}
